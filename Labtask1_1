#include<stdio.h>
int main()
{
//Write a C program to find the sum of elements in an array using pointers.

    int x[100],*y,n,s=0;
    y=x;
    printf("size of an array:");
    scanf("%d",&n);
    printf("enter the values in an array:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&x[i]);
    }
    for(int i=0;i<n;i++)
    {
        s+=(*y);
        y++;
    }
    printf("sum of numbers in an array: %d",s);
}
